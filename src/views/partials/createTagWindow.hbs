<div class="uk-modal" id="createTagModal" ng-controller="settingsCtrl">
    <div class="uk-modal-dialog">
        <form class="uk-form-stacked" id="createTagForm" ng-submit="createTag($event)">
            <div class="">
                <label for="typeName">Tag Name</label>
                <input type="text" class="md-input" id="tagName" name="tagName"
                       data-validation="length"
                       data-validation-length="min3"
                       data-validation-error-msg="Please enter a valid tag name. Tag name must contain at least 3 characters." />
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn md-btn-flat uk-modal-close">Close</button>
                <button type="button" class="md-btn md-btn-flat md-btn-flat-primary" id="submitCreateTicketType" ng-click="createTag($event)">Create</button>
            </div>
        </form>
    </div>
</div>